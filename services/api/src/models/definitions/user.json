{
  "attributes": {
    "email": {
      "type": "String",
      "required": true,
      "lowercase": true,
      "trim": true,
      "unique": true
    },
    "roles": [
      {
        "role": { "type": "string", "required": true },
        "scope": { "type": "String", "enum": ["global", "account"], "required": true },
        "scopeRef": { "type": "ObjectId" }
      }
    ],
    "name": {
      "type": "String",
      "trim": true
    },
    "hashedPassword": {
      "type": "String",
      "access": "private"
    },
    "timeZone": {
      "type": "String"
    }
  }
}