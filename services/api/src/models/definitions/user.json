{
  "attributes": {
    "email": {
      "type": "String",
      "validate": "email",
      "required": true,
      "lowercase": true,
      "trim": true,
      "unique": true
    },
    "roles": [
      {
        "role": {
          "type": "String",
          "required": true
        },
        "scope": {
          "type": "String",
          "required": true
        },
        "scopeRef": {
          "type": "ObjectId",
          "ref": "Organization"
        }
      }
    ],
    "name": {
      "type": "String",
      "trim": true
    },
    "timeZone": {
      "type": "String"
    },
    "hashedPassword": {
      "type": "String",
      "readScopes": "none",
      "writeScopes": "none"
    },
    "loginAttempts": {
      "type": "Number",
      "default": 0,
      "readScopes": "none",
      "writeScopes": "none"
    },
    "lastLoginAttemptAt": {
      "type": "Date",
      "readScopes": "none",
      "writeScopes": "none"
    },
    "authTokenId": {
      "type": "String",
      "readScopes": "none",
      "writeScopes": "none"
    },
    "tempTokenId": {
      "type": "String",
      "readScopes": "none",
      "writeScopes": "none"
    }
  }
}
