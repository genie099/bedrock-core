{
  "attributes": {
    "email": {
      "type": "String",
      "required": true,
      "lowercase": true,
      "trim": true,
      "unique": true
    },
    "roles": [
      {
        "context": { "type": "String", "enum": ["global", "organization"], "required": true },
        "target": { "type": "ObjectId" },
        "role": { "type": "ObjectId", "ref": "Role", "required": true  }
      }
    ],
    "name": {
      "type": "String",
      "trim": true
    },
    "hashedPassword": {
      "type": "String",
      "access": "private"
    },
    "timeZone": { "type": "String" }
  }
}