{
  "attributes": {
    "name": {
      "type": "String",
      "trim": true,
      "required": true
    },
    "description": {
      "type": "String",
      "trim": true
    },
    "images": [
      {
        "type": "ObjectId",
        "ref": "Upload",
        "autopopulate": true
      }
    ],
    "categories": [
      {
        "type": "ObjectId",
        "ref": "Category",
        "autopopulate": true
      }
    ],
    "country": {
      "type": "String"
    },
    "address": {
      "line1": { "type": "String" },
      "line2": { "type": "String" },
      "houseNumber": { "type": "String" },
      "city": { "type": "String" },
      "postalCode": { "type": "String" },
      "stateOrProvince": { "type": "String" },
      "countryCode": { "type": "String" },
      "geoLocation": {
        "type": { "type": "String", "default": "Point" },
        "coordinates": {
          "type": "Array",
          "default": []
        }
      }
    }
  }
}
